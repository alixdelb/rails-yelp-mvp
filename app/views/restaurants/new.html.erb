<h2> Add a new restaurant </h2>

<div class="container">
  <%= simple_form_for [@restaurant] do |f|%>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: true %>
    <%= f.input :phone_number %>
    <%= f.submit "Add a Restaurant", class: "btn btn-primary"%>
  <% end %>
</div>
